node('java') {
    stage('Git') {
    git branch: 'Dev', url: 'https://github.com/Karthick-Gopalakrishnan/webapp.git'
   }
    stage('Build') {
	sh script: 'mvn package'
   }
    stage('Artifact'){
    archive 'target/*.war'
    }

    stage('Deploy'){
    sh 'mkdir $WORKSPACE/$JOB_NAME'
    sh 'cp target/*.war /var/lib/jenkins/$JOB_NAME'
    sh 'cd /var/lib/jenkins'
    sh 'scp -r $JOB_NAME ansible@172.16.124.6:/home/ansible/'
    }
}


     
     

